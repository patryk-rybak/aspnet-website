@model shop.Models.ProductModel
@using shop.Data
@{
    var categories = ViewBag.Categories as List<Category>;
    Layout = null;
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add product</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Add product</h2>
        @using (Html.BeginForm("AddProduct", "Admin", FormMethod.Post))
        {
            <!-- Dane produktu -->
            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description, new { @class = "control-label" })
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 4 })
                @Html.ValidationMessageFor(model => model.Description, null, new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Price, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Price, new { @class = "form-control", type = "number", step = "0.01" })
                @Html.ValidationMessageFor(model => model.Price, null, new { @class = "text-danger" })
            </div>

            <!-- Kategorie produktu -->
            <div class="form-group">
                @if (categories != null)
                {
                    @Html.LabelFor(model => model.CategoryName, new { @class = "control-label" })
                    @Html.DropDownListFor(model => model.CategoryName, new SelectList(categories.Select(c => c.name).ToList()), "Select category", new { @class = "form-control" })
                }
                else
                {
                    <p>Brak dostępnych kategorii</p>
                }
                @Html.ValidationMessageFor(model => model.CategoryName, null, new { @class = "text-danger" })
            </div>

            <!-- Dodanie nowej kategorii -->
            <div class="form-group">
                @Html.Label("newCategoryName", "Nowa kategoria", new { @class = "control-label" })
                @Html.TextBox("newCategoryName", null, new { @class = "form-control" })
                <button type="submit" name="action" value="addCategory" class="btn btn-secondary mt-2">Add category</button>
            </div>

            <!-- Przycisk akcji -->
            <div class="form-group text-center">
                <button type="submit" name="action" value="addProduct" class="btn btn-primary">Save product</button>
            </div>
        }

        @Html.ValidationSummary(true, "Popraw poniższe błędy:", new { @class = "text-danger" })
    </div>
</body>
</html>
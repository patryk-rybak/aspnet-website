@using shop.Data;
@{
    var cartProducts = ViewBag.CartProducts as List<Product>;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 0;
            line-height: 1.6;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .cart-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        .cart-table th,
        .cart-table td {
            border: 1px solid #ddd;
            padding: 10px;
            text-align: left;
        }

        .cart-table th {
            background-color: #f4f4f4;
        }

        .cart-actions {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }

        .cart-actions .btn-clear,
        .cart-actions .btn-checkout,
        .btn-remove {
            padding: 8px 15px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .cart-actions .btn-clear:hover,
        .cart-actions .btn-checkout:hover,
        .btn-remove:hover {
            background-color: #0056b3;
        }

        .empty-cart-message {
            font-size: 1.2rem;
            color: #666;
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <h2>Shopping Cart</h2>

    @if (cartProducts != null && cartProducts.Any())
    {
        <table class="cart-table">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in cartProducts)
                {
                    <tr>
                        <td>@product.name</td>
                        <td>@product.price</td>
                        <td>
                            <!-- Remove product form -->
                            @using (Html.BeginForm("Remove", "ShoppingCart", FormMethod.Get))
                            {
                                <input type="hidden" name="productId" value="@product.id" />
                                <button type="submit" class="btn-remove">Remove</button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Clear Cart Button -->
        <div class="cart-actions">
            @using (Html.BeginForm("Clear", "ShoppingCart", FormMethod.Get))
            {
                <button type="submit" class="btn-clear">Clear Cart</button>
            }

            <!-- Checkout Button -->
            @using (Html.BeginForm("Checkout", "ShoppingCart", FormMethod.Get))
            {
                <button type="submit" class="btn-checkout">Checkout</button>
            }
        </div>
    }
    else
    {
        <p class="empty-cart-message">Your shopping cart is empty.</p>
    }
</body>
</html>

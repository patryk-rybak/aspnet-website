@using shop.Data;
@{
    var cartProducts = ViewBag.CartProducts as List<Product>;
}

<h2>Shopping Cart</h2>

@if (cartProducts != null && cartProducts.Any())
{
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in cartProducts)
            {
                <tr>
                    <td>@product.name</td>
                    <td>@product.price</td>
                    <td>
                        @using (Html.BeginForm("Remove", "ShoppingCart", FormMethod.Get))
                        {
                            <input type="hidden" name="productId" value="@product.id" />
                            <input type="submit" value="Remove" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Your shopping cart is empty.</p>
}

@using (Html.BeginForm("Clear", "ShoppingCart", FormMethod.Get))
{
    <input type="submit" value="Clear Cart" />
}